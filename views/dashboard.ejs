<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title></title>
    <%- include('shared-css') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css" />
    <link rel="stylesheet" href="/stylesheets/dashboard.css" />
</head>
<body>
    <%- include('shared-header') %>
    <div class="container-fluid">
        <div id="reminder-container" class="reminder-container float-right m-2"></div>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalReminderForm">
            Add Reminder
        </button>
    </div>
    <div class="modal fade" id="modalReminderForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <!--Modal: Contact form-->
        <div class="modal-dialog cascading-modal" role="document">
            <!--Content-->
            <div class="modal-content">
                <!--Header-->
                <div class="modal-header primary-color white-text">
                    <h4 class="title">
                        <i class="fa fa-pencil"></i>Add Reminder
                    </h4>
                    <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <!--Body-->
                <div class="modal-body">
                    <form id="addReminderForm" action="/reminder" method="post">
                        <div class="md-form form-sm">
                            <i class="fa fa-tag prefix"></i>
                            <input type="text" id="title" class="form-control form-control-sm" required>
                            <label for="title">Title</label>
                        </div>
                        <div class="md-form form-sm">
                            <i class="fa fa-bell prefix"></i>
                            <input type="text" class="form-control form-control-sm datetimepicker-input" id="dueDate" name="dueDate" data-toggle="datetimepicker" data-target="#dueDate" required/>
                            <label for="dueDate">Due date</label>
                        </div>
                        <div class="md-form form-sm">
                            <i class="fa fa-clock-o prefix"></i>
                            <input type="text" class="form-control form-control-sm datetimepicker-input" id="startDate" name="startDate" data-toggle="datetimepicker" data-target="#startDate"/>
                            <label for="startDate">Start date</label>
                        </div>
                        <!-- Material textarea message -->
                        <div class="md-form form-sm">
                            <i class="fa fa-pencil prefix"></i>
                            <textarea type="text" id="memo" class="md-textarea form-control"></textarea>
                            <label for="memo">Memo</label>
                        </div>
                        <div class="text-center mt-4 mb-2">
                            <button class="btn btn-primary">Add
                                <i class="fa fa-send ml-2"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <!--/.Content-->
        </div>
        <!--/Modal: Contact form-->
    </div>

    <%- include('shared-js') %>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js"></script>
    <script type="text/javascript" src="/javascripts/dashboard.js"></script>
</body>
</html>