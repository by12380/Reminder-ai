<!-- Modal: Edit reminder form -->
<div class="modal fade" id="modalEditReminderForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog cascading-modal" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header primary-color white-text">
                <h4 class="title">
                    <i class="fa fa-pencil"></i>Reminder
                </h4>
                <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <!--Body-->
            <div class="modal-body">
                <form id="editReminderForm" action="#">
                    <div class="md-form form-sm">
                        <i class="fa fa-tag prefix"></i>
                        <input type="text" id="editTitle" class="form-control form-control-sm" required>
                        <label for="title">Title</label>
                    </div>
                    <div class="md-form form-sm">
                        <i class="fa fa-bell prefix"></i>
                        <input type="text" class="form-control form-control-sm datetimepicker-input" id="editDueDate" name="dueDate" data-toggle="datetimepicker" data-target="#editDueDate" required/>
                        <label for="editDueDate">Due date</label>
                    </div>
                    <div class="md-form form-sm">
                        <i class="fa fa-clock-o prefix"></i>
                        <input type="text" class="form-control form-control-sm datetimepicker-input" id="editStartDate" name="startDate" data-toggle="datetimepicker" data-target="#editStartDate"/>
                        <label for="editStartDate">Start date</label>
                    </div>
                    <div class="form-row pt-2" id="editAlertFormGroup">
                        <div class="col-3 ml-2">
                            <div class="form-check mt-1">
                                <input class="form-check-input" type="checkbox" value="" name="editSetAlert" id="editSetAlert">
                                <label class="form-check-label ml-1" for="editSetAlert">
                                    Set alerts
                                </label>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="form-group">
                                <select class="form-control form-control-sm" name="editProgressAlert" id="editProgressAlert">
                                    <option value="0">On every 50% progress</option>
                                    <option value="1">On every 25% progress</option>
                                    <option value="2">On every 20% progress</option>
                                    <option value="3">On every 10% progress</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- Material textarea message -->
                    <div class="md-form form-sm">
                        <i class="fa fa-pencil prefix"></i>
                        <textarea type="text" id="editMemo" class="md-textarea form-control"></textarea>
                        <label for="memo">Memo</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" name="editEmailNotification" id="editEmailNotification">
                        <label class="form-check-label" for="editEmailNotification">
                            Send email notifications
                        </label>
                    </div>
                    <div class="text-center mt-4 mb-2">
                        <button class="btn btn-primary">Update
                            <i class="fa fa-send ml-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<button hidden id="editReminderBtn" type="button" data-toggle="modal" data-target="#modalEditReminderForm"></button>