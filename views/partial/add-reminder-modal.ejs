<!-- Modal: Add reminder form -->
<div class="modal fade" id="modalAddReminderForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog cascading-modal" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header primary-color white-text">
                <h4 class="title">
                    <i class="fa fa-pencil"></i>Add Reminder
                </h4>
                <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <!--Body-->
            <div class="modal-body">
                <form id="addReminderForm" action="/reminder" method="post">
                    <div class="md-form form-sm">
                        <i class="fa fa-tag prefix"></i>
                        <input type="text" id="title" class="form-control form-control-sm" required>
                        <label for="title">Title</label>
                    </div>
                    <div class="md-form form-sm">
                        <i class="fa fa-bell prefix"></i>
                        <input type="text" class="form-control form-control-sm datetimepicker-input" id="dueDate" name="dueDate" data-toggle="datetimepicker" data-target="#dueDate" required/>
                        <label for="dueDate">Due date</label>
                    </div>
                    <div class="md-form form-sm">
                        <i class="fa fa-clock-o prefix"></i>
                        <input type="text" class="form-control form-control-sm datetimepicker-input" id="startDate" name="startDate" data-toggle="datetimepicker" data-target="#startDate"/>
                        <label for="startDate">Start date</label>
                    </div>
                    <!-- Material textarea message -->
                    <div class="md-form form-sm">
                        <i class="fa fa-pencil prefix"></i>
                        <textarea type="text" id="memo" class="md-textarea form-control"></textarea>
                        <label for="memo">Memo</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" name="emailNotification" id="emailNotification">
                        <label class="form-check-label" for="emailNotification">
                            Send email notifications
                        </label>
                    </div>
                    <div class="text-center mt-4 mb-2">
                        <button class="btn btn-primary">Add
                            <i class="fa fa-send ml-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>